<% layout('layout') -%>
<h3>Upload Master Phone List</h3>
<p class="text-muted">CSV/XLS/XLSX. One column with phone numbers. Headers optional.</p>

<form id="adminUploadForm" class="mt-3" method="post" action="/admin/upload" enctype="multipart/form-data">
  <div class="mb-3">
    <input class="form-control" type="file" name="file" accept=".csv,.xls,.xlsx" required />
  </div>
  <button class="btn btn-primary" type="submit">Upload & Upsert</button>
</form>

<div id="adminUploadProgress" class="mt-3 d-none">
  <div class="d-flex justify-content-between mb-1">
    <small class="text-muted">Uploading…</small>
    <small class="text-muted"><span data-percent>0</span>%</small>
  </div>
  <div class="progress" role="progressbar" aria-valuemin="0" aria-valuemax="100">
    <div class="progress-bar progress-bar-striped progress-bar-animated" style="width:0%"></div>
  </div>
  <small class="text-muted d-block mt-2" data-status>Preparing…</small>
</div>
